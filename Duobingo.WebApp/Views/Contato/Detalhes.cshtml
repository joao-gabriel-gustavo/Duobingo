@using Duobingo.WebApp.Models

@model DetalhesContatoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes do contato";
}


<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card bg-dark text-white rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Id" class="control-label fs-5">Id:</label>
                    <input name="Id" class="form-control" value="@Model.Id" readonly disabled />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Nome" class="control-label fs-5">Nome:</label>
                    <input name="Nome" class="form-control" type="text" value="@Model.Nome" readonly disabled />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Emai" class="control-label fs-5">Email: </label>
                    <input name="Email" class="form-control" type="text" value="@Model.Email" readonly disabled />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Telefone" class="control-label fs-5">Telefone:</label>
                    <input name="Telefone" class="form-control" type="text" value="@Model.Telefone" readonly disabled />
                </div>

                @if (Model.Cargo != null)
                {
                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Cargo" class="control-label fs-5">Cargo:</label>
                        <input name="Cargo" class="form-control" type="text" value="@Model.Cargo" readonly disabled />
                    </div>
                }
                @if (Model.Empresa != null)
                {
                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Empresa" class="control-label fs-5">Empresa:</label>
                        <input name="Empresa" class="form-control" type="text" value="@Model.Empresa" readonly disabled />
                    </div>
                }
                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a class="text-white" href="/contatos">Voltar para a listagem</a>
                    </div>
                
            </div>
        </div>


    </div>
</div>