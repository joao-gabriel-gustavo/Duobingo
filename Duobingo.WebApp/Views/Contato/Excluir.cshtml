﻿@using eDuobingoWebApp.Models

@model ExcluirContatoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de contatos";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card bg-dark text-white rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>

                <p class="mt-4">Você deseja realmente excluir o contato "@Model.Nome"?</p>

                <form action="/contatos/excluir/{@Model.Id}" method="post">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a class="text-white" href="/">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-light px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>