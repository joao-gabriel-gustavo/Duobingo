@using Duobingo.WebApp.Model
@model VisualizarQuestoesViewModel

<div class="container">
    <h1 class="text-center my-4 fw-bold">
        <i class="bi bi-question-circle-fill"></i> Questões
    </h1>
    <p class="text-center lead text-muted fw-semibold">Gerencie aqui as questões disponíveis no sistema.</p>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-start mb-3">
        <a href="/questoes/cadastrar" class="btn btn-adicionar btn-md">
            <i class="bi bi-plus-circle"></i> Adicionar nova questão
        </a>
    </div>

    <hr />

    @if (Model.Registros.Any())
    {
        <div class="row gx-2 gy-2">
            @foreach (var item in Model.Registros)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <p class="card-text mb-2 fs-6">
                                    <span class="fw-bold">Matéria:</span> @item.Materia.Nome
                                </p>
                                <p class="card-text mb-3 fs-6">
                                    <span class="fw-bold">Enunciado:</span> @((item.Enunciado != null && item.Enunciado.Length > 50) ? item.Enunciado.Substring(0, 50) + "..." : item.Enunciado)
                                </p>
                                
                                <div class="mb-3">
                                    <small class="text-muted fw-bold">Alternativas:</small>
                                    <ul class="list-unstyled small mt-1">
                                        @foreach (var alt in item.Alternativas)
                                        {
                                            <li class="@(alt.Correta ? "text-success fw-bold" : "")">
                                                @if (alt.Correta)
                                                {
                                                    <i class="bi bi-check-circle-fill text-success me-1"></i>
                                                }
                                                <strong>@alt.Letra:</strong> @((alt.Resposta != null && alt.Resposta.Length > 20) ? alt.Resposta.Substring(0, 20) + "..." : alt.Resposta)
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-1">
                                <a href="/questoes/detalhes/@item.Id" class="btn btn-secondary" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/questoes/editar/@item.Id" class="btn btn-primary" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="/questoes/excluir/@item.Id" class="btn btn-danger" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-question-circle display-1 text-muted"></i>
            <h4 class="text-muted mt-3">Nenhuma questão cadastrada</h4>
            <p class="text-muted">Clique no botão "Adicionar nova questão" para começar.</p>
        </div>
    }
</div> 