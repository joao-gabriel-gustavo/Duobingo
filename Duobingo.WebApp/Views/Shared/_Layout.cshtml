<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/app.css" />

    <title>@ViewBag.Titulo | Duobingo</title>

 
 
        <style >
        :root {
            --duo-green-dark: #145c2c;
            --duo-green-light: #b6f8a6;
        }

        body {
            background-color: #e6f9e6; /* fundo clarinho */
        }
        .navbar-duo {
            background-color: var(--duo-green-dark);
        }

        .btn-duo {
            background-color: var(--duo-green-light);
            color: var(--duo-green-dark);
            font-weight: 600;
            border: none;
            transition: all 0.2s ease;
        }

            .btn-duo:hover,
            .btn-duo:focus {
                background-color: #a0e792; /* ajustado para não sumir */
                color: var(--duo-green-dark);
                text-decoration: none;
            }
    </style>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-duo shadow">
        <div class="container">
            <a class="navbar-brand fs-3 fw-bold text-white" href="/">
                🐊 Duobingo
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto d-flex gap-4">
                    <li class="nav-item">
                        <a href="/contatos" class="btn btn-duo">
                            <i class="bi bi-person-lines-fill me-1"></i> Disciplinas
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/contatos" class="btn btn-duo">
                            <i class="bi bi-calendar-check me-1"></i> Matérias
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/contatos" class="btn btn-duo">
                            <i class="bi bi-tags me-1"></i> Questões
                        </a>
                    </li>

                    <li class="nav-item">
                          <a href="/contatos" class="btn btn-duo">
                            <i class="bi bi-cash-coin me-1"></i> Testes
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <header class="container my-4">
        <h2 class="fw-bold">@ViewBag.Titulo</h2>
    </header>


    <main class="container my-4">
        @RenderBody()
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


    <script src="~/js/ativacaoNavbar.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
