@using Duobingo.WebApp.Model
@model VisualizarTestesViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Testes";
}

<p>
    <a class="btn btn-primary px-4" href="/compromissos/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card border-0" style="min-height: 238px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Titulo</h5>
                   

                   

                    <span class="d-flex gap-1 justify-content-end mt-auto">
                        <a href="/testes/editar/@item.Id" class="btn btn-primary rounded-circle opcao-card">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/testes/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>