@model CadastrarTesteViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Teste";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Cadastrar">
                    <h3>Formulário de Cadastro</h3>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Titulo" class="control-label fs-5">Titulo:</label>
                        <input asp-for="Titulo" class="form-control" placeholder="Digite um titulo para seu teste" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="DisciplinaId" class="control-label fs-5">Disciplina:</label>
                        <select asp-for="DisciplinaId" name="ContatoId" id="ContatoId" class="form-select">
                            <option value="">Sem contato</option>
                            @foreach (var disciplina in Model.DisciplinasDisponiveis)
                            {
                                <option value="@disciplina.Id">@disciplina.Nome</option>
                            }
                        </select>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label class="control-label fs-5">Matérias:</label>
                        <div class="d-flex flex-wrap gap-5 mt-2">
                            @for (int i = 0; i < Model.MateriasDisponiveis?.Count(); i++)
                            {
                                var materia = Model.MateriasDisponiveis.ElementAt(i);
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="MateriasSelecionadas[]"
                                           value="@materia.Id"
                                           id="materia_@materia.Id"
                                    @(Model.MateriasSelecionadas != null && Model.MateriasSelecionadas.Contains(materia.Id) ? "checked" : "") />
                                    <label class="form-check-label" for="materia_@materia.Id">
                                        @materia.Nome
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="MateriasSelecionadas" class="text-danger"></span>
                    </div>
                        <span asp-validation-for="MateriasSelecionadas" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/testes">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}