@model CadastrarTesteViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Teste";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="Cadastrar">
                    <h3>Formulário de Cadastro</h3>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Titulo" class="control-label fs-5">Titulo:</label>
                        <input asp-for="Titulo" class="form-control" placeholder="Digite um titulo para seu teste" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="DisciplinaId" class="control-label fs-5">Disciplina:</label>
                        <select asp-for="DisciplinaId" name="DisciplinaId" id="DisciplinaId" class="form-select">
                            <option value=""></option>
                            @foreach (var disciplina in Model.DisciplinasDisponiveis)
                            {
                                <option value="@disciplina.Id">@disciplina.Nome</option>
                            }
                        </select>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Serie" class="control-label fs-5">Serie:</label>
                        <select asp-for="Serie" name="Serie" id="Serie" class="form-select">
                            <option value=""></option>
                            @foreach (var serie in Model.SeriesDisponiveis)
                            {
                                <option value="@Model.Serie">@serie</option>
                            }
                        </select>
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="QuantidadeQuestoes" class="control-label fs-5">Quantidade de Questões</label>
                        <select asp-for="QuantidadeQuestoes" class="form-select">
                            <option value="">Selecione</option>
                            <option value="QuantidadeQuestoes">1</option>
                            <option value="QuantidadeQuestoes">2</option>
                            <option value="QuantidadeQuestoes">3</option>
                            <option value="QuantidadeQuestoes">4</option>
                            <option value="QuantidadeQuestoes">5</option>
                            <option value="QuantidadeQuestoes">6</option>
                            <option value="QuantidadeQuestoes">7</option>
                            <option value="QuantidadeQuestoes">8</option>
                            <option value="QuantidadeQuestoes">9</option>
                            <option value="QuantidadeQuestoes">10</option>
                        </select>
                        <span asp-validation-for="QuantidadeQuestoes" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <h5>Status:</h5>
                        @if (Model.EhRecuperacao)
                        {
                            <span class="badge bg-warning text-dark">Teste de Recuperação</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Teste Normal</span>
                        }
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/testes">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}