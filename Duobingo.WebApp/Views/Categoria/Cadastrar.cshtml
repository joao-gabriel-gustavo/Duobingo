@model CadastrarCategoriaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Categoria";
}

<hr />

<div class="row justify-content-center my-5">
    <div class="col-md-8">	
        <div class="bg-dark-gray card bg-dark text-white">
            <div class="card-body">
                <form asp-action="Cadastrar" method="post">
                    <h3>Formulário de Cadastro</h3>

                    @if (ViewData.ModelState.ContainsKey("CadastroUnico"))
                    {
                        <div class="alert alert-danger">
                            @ViewData.ModelState["CadastroUnico"].Errors[0].ErrorMessage
                        </div>
                    }

                    <div class="form-group d-grid gap-2">
                        <label asp-for="Titulo" class="control-label fs-5">Título:</label>
                        <input asp-for="Titulo" class="form-control" type="text" value="@Model.Titulo" placeholder="Digite o título da categoria">
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a class="text-light" href="/categorias">Voltar</a>
                        <button type="submit" class="btn btn-light px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 