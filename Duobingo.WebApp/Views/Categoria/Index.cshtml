@model VisualizarCategoriasViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Categorias";
}

<p>
    <a class="btn btn-dark px-4" href="/categorias/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Nova/o
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card border-0 bg-dark text-white">
                <div class="card-body">
                    <h4 class="card-title">Categoria:</h4>
                    <h5>@item.Titulo</h5>
                    <p class="card-text">
                        <small>Despesas: @item.QuantidadeDespesas</small><br>
                        <small>Total: R$ @item.ValorTotalDespesas.ToString("F2")</small>
                    </p>
                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <a href="/categorias/detalhes/@item.Id" class="btn btn-light rounded-circle opcao-card">
                            <i class="bi bi-search"></i>
                        </a>
                        <a href="/categorias/editar/@item.Id" class="btn btn-light rounded-circle opcao-card">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/categorias/excluir/@item.Id" class="btn btn-light rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @TempData["MensagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Registros.Count == 0)
{
    <div class="alert alert-info mt-3">
        <i class="bi bi-info-circle"></i> Nenhuma categoria cadastrada.
    </div>
} 